<body>
    <div class="container">
        <div class="card">
            <hr>
            <div class="card-header">
                <center>
                    <h1> Softphone </h1>
                </center>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"><input class="form-control" name="display" type="text"></th>
                        </tr>
                    </thead>
                </table>
                <table class="table">
