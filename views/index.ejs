                            <td><button name="btn9" class="btn btn-info btn-lg btn-block">9</button></td>
                        </tr>
                        <tr>
                            <th><button name="btnAsterisco" class="btn btn-info btn-lg btn-block">*</button></th>
                            <td><button name="btn0" class="btn btn-info btn-lg btn-block">0</button></td>
                            <td><button name="btnCerc" class="btn btn-info btn-lg btn-block">#</button></td>
                        </tr>
                    </tbody>
                </table>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"><button class="btn btn-success btn-lg btn-block">Discar</button></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <hr>
</body>

